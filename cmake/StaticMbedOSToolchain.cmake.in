#* ------ Include UseStaticMbedOS ------
if (NOT TARGET StaticMbedOS_)
  add_library(StaticMbedOS_ UNKNOWN IMPORTED)
  # MbedOS-like library should be satisfied the following conditions:
  # - good INTERFACE_COMPILE_OPTIONS
  # - good INTERFACE_DEFINITIONS
  # - good INTERFACE_INCLUDE_DIRECTORIES
  # for link, it should satisfy the following conditions:
  # - good INTERFACE_LINK_OPTIONS
  # - has good .a file
  set_target_properties(StaticMbedOS_ PROPERTIES
    IMPORTED_LINK_INTERFACE_LANGUAGES "CXX"
    IMPORTED_LOCATION "@CMAKE_INSTALL_PREFIX@/lib/libstatic-mbed-os-@MBED_TARGET@.a"
    INTERFACE_COMPILE_OPTIONS "@compile_options@"
    INTERFACE_INCLUDE_DIRECTORIES "@include_directories@"
    INTERFACE_COMPILE_DEFINITIONS "@compile_definitions@"
    INTERFACE_LINK_OPTIONS "@link_options@"
  )
endif()

if(NOT TARGET StaticMbedOS)
  add_library(StaticMbedOS INTERFACE IMPORTED)
  target_link_libraries(StaticMbedOS INTERFACE StaticMbedOS_)
  target_link_options(StaticMbedOS INTERFACE "SHELL:-Wl,--whole-archive $<TARGET_FILE:StaticMbedOS_> -Wl,--no-whole-archive")
endif()


function(static_mbed_os_transform_rules target)
  # Generate .bin from .elf
  add_custom_command(
    TARGET ${target}
    POST_BUILD
    COMMAND ${CMAKE_OBJCOPY} -O binary $<TARGET_FILE:${target}> $<TARGET_FILE_BASE_NAME:${target}>.bin
    COMMENT "Generating ${target}.bin"
  )

  # Generate .hex from .elf
  add_custom_command(
    TARGET ${target}
    POST_BUILD
    COMMAND ${CMAKE_OBJCOPY} -O ihex $<TARGET_FILE:${target}> $<TARGET_FILE_BASE_NAME:${target}>.hex
    COMMENT "Generating ${target}.hex"
  )

  # Generate .lst from .elf
  add_custom_command(
    TARGET ${target}
    POST_BUILD
    COMMAND ${CMAKE_OBJDUMP} -S $<TARGET_FILE:${target}> > $<TARGET_FILE_BASE_NAME:${target}>.lst
    COMMENT "Generating ${target}.lst"
  )

  add_custom_target(upload_${target}
    COMMAND sudo -E bash -c 'st-flash --connect-under-reset $$FLASH_ARGS --format ihex write $<TARGET_FILE_BASE_NAME:${target}>.hex'
    DEPENDS ${target}
    COMMENT "Uploading ${target}.bin to device"
    USES_TERMINAL
  )
endfunction()

function(static_mbed_os_app_target target)
  target_link_options(${target} PRIVATE "-T" "@linker_script@")
  set_property(TARGET ${target} APPEND PROPERTY LINK_DEPENDS "@linker_script@")

  static_mbed_os_transform_rules(${target})
endfunction()